<%- layout("base/base") -%>

<div class="flex-1 flex my-20">
    <div class="flex-1 flex flex-col gap-2 bg-body-background dark:bg-body-background-dark rounded-md border border-black/20 dark:border-black/30 shadow-md p-5">
        <div class="flex-1 flex-col gap-2 flex">
            <div>
                <h1 class="text-3xl font-semibold">
                    ID do cartão: <%= cardid %>
                </h1>
            </div>
            <hr />
            <div>
                <div>
                    <h1 class="text-xl font-semibold">Informações do usuário</h1>
                </div>
                <div>
                    <p>
                        Nome: <%= cartao.nome %>
                    </p>
                </div>
                <div>
                    <p>
                        CPF: <%= cartao.cpf %>
                    </p>
                </div>
                <div>
                    <p>
                        Telefone: <%= cartao.telefone %>
                    </p>
                </div>
            </div>
            <hr />
            <div>
                <h1 class="text-3xl font-semibold" id="reactivePoints">Pontuação: <%= cartao.pontuacao %></h1>
            </div>
        </div>
        <div>
            <button id="return" class="py-2 px-3 border border-gray-400/50 dark:border-black/20 hover:bg-gray-400/20 rounded-md">Voltar</button>
            <button id="addPoint" data-cardid="<%= cartao.cardId %>" class="py-2 px-3 border border-gray-400/50 dark:border-black/20 hover:bg-gray-400/20 rounded-md">Incrementar Pontuação</button>
            <button id="remPoint" class="py-2 px-3 border border-gray-400/50 dark:border-black/20 hover:bg-gray-400/20 rounded-md">Decrementar Pontuação</button>
            <button id="remU" class="py-2 px-3 border border-gray-400/50 dark:border-black/20 hover:bg-gray-400/20 rounded-md">Remover</button>

        </div>
    </div>
</div>
